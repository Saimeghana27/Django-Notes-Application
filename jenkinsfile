pipeline{
    agent any
    stages{
        stage('code') {
            steps {
                git branch: 'main', url: 'https://github.com/Saimeghana27/Django-Notes-Application.git'
            }
        }
        stage("Build"){
            steps{
                sh "docker build . -t django-application"
            }
        }
        stage("Pushing to Docker Hub"){
            steps{
                withCredentials([usernamePassword(credentialsId:"Docker-Hub-Credentials",passwordVariable: 'saiharsha5398', usernameVariable: 'dockersaimeghana')]){
                sh "docker tag django-application ${env.dockersaimeghana27}/django-application:latest"
                sh "docker login -u ${env.dockersaimeghana} -p ${env."saiharsha5398"}"
                sh "docker push ${env.dockersaimeghana27}/django-application:latest"
                }
            }
        }
        stage("Deploy"){
            steps{
                echo "deploy"
                sh "docker-compose down && docker-compose up -d"
            }
        }
    }
}
